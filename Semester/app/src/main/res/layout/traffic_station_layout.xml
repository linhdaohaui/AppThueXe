<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="9">

        <ImageView
            android:id="@+id/ivTrafficStaImg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_location" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTramXe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="096 - Trạm đối diện 1152 đường Láng"
                android:textColor="#343a40"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDiaChiTramXe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đối diện số 1152 đường Láng - Phường Láng Thượng - Quận Đống Đa - TP.Hà Nội"
                android:textColor="#6c757d"
                android:textSize="13sp" />

        </LinearLayout>
    </TableRow>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline" />
</LinearLayout>