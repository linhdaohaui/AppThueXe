<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ScanQR">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvTenTramXe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạm 001 - Công viên 30/4"
            android:textColor="#0d6efd"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDiaChiTramXe"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/underline"
            android:lineHeight="26dp"
            android:paddingBottom="20dp"
            android:text="Công viên 30/4, Lê Duẩn, Bến Nghé, Quận 1, Thành phố Hồ Chí Minh"
            android:textColor="#6c757d"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/tvLoaiXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:lineHeight="26dp"
            android:text="Xe đạp điện"
            android:textColor="#6c757d"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBienSoXe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:lineHeight="26dp"
            android:text="X51J-21.555"
            android:textColor="#0d6efd"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:lineHeight="26dp"
            android:text="Biển số xe"
            android:textColor="#6c757d"
            android:textSize="13sp" />


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/customer_button"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/imgNapDiem"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_bike" />


            <Button
                android:id="@+id/btnBatDau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000D6EFD"
                android:text="Bắt đầu"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold" />

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/underline" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/customer_border"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tài khoản chính"
                android:textColor="#adb5bd"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvTaiKhoanChinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="100.000 Điểm"
                android:textColor="#343a40"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNapDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000D6EFD"
                android:text="Nạp điểm"
                android:textColor="#adb5bd"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llQuetQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/llTrangChu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgTrangChu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#fff"
                android:src="@drawable/icon_account" />

            <TextView
                android:id="@+id/tvTrangChu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trang chủ"
                android:textColor="#0a58ca"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgQR"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#fff"
                android:src="@drawable/icon_qr" />

            <TextView
                android:id="@+id/tvQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Quét QR xe"
                android:textColor="#0a58ca"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llDangXuat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCaiDat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="#fff"
                android:src="@drawable/icon_exit" />

            <TextView
                android:id="@+id/tvCaiDat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đăng xuất"
                android:textColor="#0a58ca"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>